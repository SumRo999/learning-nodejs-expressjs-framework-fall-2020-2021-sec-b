<!DOCTYPE html>
<html>
<head>
	<title>My Profile</title>
	<link rel="stylesheet" href="/assets/common/css/style.css">
</head>
<body>
	<%- include('NavBar') %>
	<div id="workspace">
		<form method="post">
		<fieldset>
			<h2><%=user[0].name %></h2>
			<br/>
			<table id="view">
				<tr colspan="2">
					<img src="<%=user[0].profilepicture%>" alt="Avatar" width="150" height="150">
					<br/>
				</tr>
				<tr>
					<td>Customer Id :</td>
					<td><%=user[0].acid %></td>
				</tr>
				<tr>
					<td>Name :</td>
					<td><%=user[0].name %></td>
				</tr>
				<tr>
					<td>Email :</td>
					<td><%=user[0].email %></td>
				</tr>
				<tr>
					<td>Gender :</td>
					<td><%=user[0].gender %></td>
				</tr>
				<tr>
					<td>Date Of Birth :</td>
					<td><%=user[0].dob %></td>
				</tr>
				<tr>
					<td>Phone Number :</td>
					<td><%=user[0].accountstatus %></td>
				</tr>
				<tr>
					<td>Address :</td>
					<td><%=user[0].address %></td>
				</tr>
				<tr>
					<td>Account Status :</td>
					<td><%=user[0].status %></td>
				</tr>
			</table>
			<div>
				
				<a href="/customerController/updateProfile">
					<button type="button">
						Update Profile
					</button>
				</a>
				<a href="/customerController/changePassword">
					<button type="button">
						Change Password
					</button>
				</a>
				<a href="/customerController/customerHome">
					<button type="button">
						Back
					</button>
				</a>
				<input type="hidden" name="customerid" value="<%=user[0].customerid %>">
			</div>
		</fieldset>
	</form>
	</div>
</body>
</html>