<!DOCTYPE html>
<html>
<head>
	<title>Add Books</title>
	<link rel="stylesheet" href="/assets/common/css/style.css">
</head>
<body>
	<%- include('NavBar') %>
	<div id="workspace">
		<h1 align='center'>Add Books</h1>
		<br/>
		<form method="post" enctype="multipart/form-data">
			<table id="view">
				<tr>
					<td>Book ID</td>
					<td><input type="text" id="bookid" name="bookid"></td>
				</tr>
				<tr>
					<td>Category</td>
					<td>
						<select id="category" name="category">
			   			<option value="None">None</option>
		   				<option value="Novel">Novel</option>
		   				<option value="Literature">Literature</option>
		   				<option value="Sci-Fi">Sci-Fi</option>
			   			</select>
			   		</td>
				</tr>
				<tr>
					<td>Book Title</td>
					<td><input type="text" id="booktitle" name="booktitle"></td>
				</tr>
				<tr>
					<td>Description</td>
					<td><textarea rows="5" cols="80" id="description" name="description"></textarea></td>
				</tr>
				<tr>
					<td>Book Picture</td>
					<td><input type="file" id="image" name="image"></td>
				</tr>
				<tr>
					<td>Price</td>
					<td><input type="text" id="price" name="price"></td>
				</tr>
				<tr>
					<td colspan='2'>
						<a href="/adminController/adminHome">
							<button type="button">
								Back
							</button>
						</a>
						<input type="submit" name="submit" value="Submit">
						<input type="reset" name="reset">
					</td>
				</tr>
			</table>
		</form>
		<div id="result">
		</div>
	</div>
</body>
</html>