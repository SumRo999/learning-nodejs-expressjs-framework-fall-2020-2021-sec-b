<!DOCTYPE html>
<html>
<head>
	<title>Delete Book</title>
	<link rel="stylesheet" href="/assets/common/css/style.css">
</head>
<body>
	<%- include('NavBar') %>
	<div id="workspace">
		<form method="post">
		<fieldset>
			<legend>Delete Book</legend>
			<table>
				<tr>
					<td>Book Picture</td>
					<td><img src="<%=list[0].bookpicture%>" alt="Avatar" width="100" height="100"></td>
				</tr>
				<tr>
					<td>Book Id :</td>
					<td><%=list[0].bookid %></td>
				</tr>
				<tr>
					<td>Category :</td>
					<td><%=list[0].category %></td>
				</tr>
				<tr>
					<td>Book Title :</td>
					<td><%=list[0].booktitle %></td>
				</tr>
				<tr>
					<td>Description :</td>
					<td><%=list[0].description %></td>
				</tr>
				<tr>
					<td>Price :</td>
					<td><%=list[0].price %></td>
				</tr>
			</table>
			<div>
				<h3>Are you sure?</h3>
				<a href="/adminController/bookList">
					<button type="button">
						Back
					</button>
				</a>
				<input type="submit" name="submit" value="Delete">
			</div>
		</fieldset>
	</form>
	</div>
</body>
</html>